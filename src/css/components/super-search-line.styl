.super-search-line
	margin 20px auto
	display table
	width 100%
	&__form
		width 100%
		position relative
		display table-cell
	&__input
		width 100%
		background-color #fff
		padding 10px
		border-top-left-radius 5px
		border-bottom-left-radius 5px
		border 1px solid #000
		border-right none
		box-sizing border-box
		color #333
		&:focus
			outline none
			border-right 1px solid
			border-color blue
	&__reset
		cursor pointer
		color #777
		position absolute
		top 7px
		right 2px
		background-color #fff
		&:before
			content ''
			position absolute
			top 0
			left -10px
			width 10px
			height 100%
			background-image linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
		&:focus
			outline none
	&__result
		position absolute
		z-index 100
		top 110%
		background-color #fff
		border-radius 5px
		box-shadow 0 0 5px 0 rgba(0,0,0,.6)
		width 100%
	&__helper
		padding 10px
		display inline-block
		position absolute
		pointer-events none
		right 0
		top 0
		background-color #fff
		&-type
			color blue
		&:before
			content ''
			position absolute
			top 0
			left -10px
			width 10px
			height 100%
			background-image linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
				
	&__link
		display inline-block
		width 100%
		overflow hidden
		padding 10px
		height 48px
		text-overflow ellipsis
		text-decoration none
		&:focus
			outline none
			border none
	&__item
		display block
		text-overflow ellipsis
		height 48px
		overflow hidden
		position relative
		color #000
		&:hover
			cursor pointer
			background-color $grey-light
			.super-search-line
				&__helper
					background-color $grey-light
					&:before
						background-image linear-gradient(to right, rgba($grey-light,0) 0%, $grey-light 100%)
		&:first-of-type
			border-top-right-radius 5px
			border-top-left-radius 5px
		&:last-of-type
			border-bottom-right-radius 5px
			border-bottom-left-radius 5px	
	&__button
		padding 9px 10px
		color #fff
		display table-cell
		background-color $orange
		border-top-right-radius 5px
		border-bottom-right-radius 5px
		&:focus
			outline none